
<h1>Create Car Workshop </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form action="/CarWorkshop/Create" method="post">
           
            <div class="form-group mb-3">
                <label for="Name" class="form-label">Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required />
            </div>

            <div class="form-group mb-3">
                <label for="Description" class="control-label">Description</label>
                <input type="text" class="form-control" id="Description" name="Description" />
            </div>

            <div class="form-group mb-3">
                <label for="PhoneNumber" class="control-label">PhoneNumber</label>
                <input type="text" class="form-control" id="PhoneNumber" name="ContactDetails.PhoneNumber" />
            </div>
            <div class="form-group mb-3">
                <label for="Street" class="control-label">Street</label>
                <input type="text" class="form-control" id="Street" name="ContactDetails.Street" />
            </div>
            <div class="form-group mb-3">
                <label for="City" class="control-label">City</label>
                <input type="text" class="form-control" id="City" name="ContactDetails.City" />
            </div>
            <div class="form-group mb-3">
                <label for="PostalCode" class="control-label">PostalCode</label>
                <input type="text" class="form-control" id="PostalCode" name="ContactDetails.PostalCode" />
            </div>
            <div class="form-group mb-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
         </form> 
         </div>
</div>